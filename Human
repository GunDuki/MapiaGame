package MapiaGame;

import java.util.Scanner;

public class Human {
	protected static int life;
	protected static String number;
	protected static int votenum;
	public Human(String number){
		this.life=life;
		this.number=number;
	}
	public static int vote(){
		Scanner input = new Scanner(System.in);
		votenum=((int)(Math.random()*(6)));
		return votenum;
	}
	public static int votekill(){
		life=0;
		if(Simin.life==0){
			System.out.println("그는 시민이였습니다. 수고 ㅂ");
			Main.killperson++;
		}
		else if(Simin2.life==0){
			System.out.println("그는 시민2이였습니다. 수고 ㅂ");
			Main.killperson++;
		}
		else if(Simin3.life==0){
			System.out.println("그는 시민3이였습니다. 수고 ㅂ");
			Main.killperson++;
		}
		else if(Doctor.life==0){
			System.out.println("그는 의사였습니다. 수고 ㅂ");
			Main.killperson++;
		}
		else if(Police.life==0){
			System.out.println("그는 경찰이였습니다. 수고 ㅂ");
			Main.killperson++;
		}
		else if(Mapia.life==0){
			System.out.println("마피아가 죽었습니다. 게임 끝!");
			System.exit(0);
		}
		return life;
	}
}
